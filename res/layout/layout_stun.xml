<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:orientation="vertical"
    android:id="@id/coordinator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_appbar" />
        <LinearLayout
            android:gravity="center"
            android:id="@id/wait_layout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:textAppearance="@style/AppearanceFoundation.Title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stun_attest_loading" />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@id/main_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.google.android.material.card.MaterialCardView
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginRight="16.0dip"
                    app:cardBackgroundColor="?colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAppearance="?textAppearanceSubtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nat_stun_server_hint" />
                        <EditText
                            android:id="@id/nat_stun_server"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="stun.voipgate.com:3478"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginRight="16.0dip"
                    app:cardBackgroundColor="?colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAppearance="?textAppearanceSubtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nat_result_hint" />
                        <TextView
                            android:id="@id/nat_result"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginRight="16.0dip">
                    <Button
                        android:textColor="?primaryOrTextPrimary"
                        android:id="@id/stunTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start"
                        android:layout_marginEnd="8.0dip"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>